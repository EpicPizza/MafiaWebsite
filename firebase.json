{
  "hosting": {
    "public": "functions/build/client",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "function": {
					"functionId": "ssrServer",
					"region": "us-west1"
				}
      }
    ]
  },
  "functions": {
    "source": "functions"
  },
  "emulators": {
    "hosting": {
      "port": 5173,
      "host": "0.0.0.0"
    }
  }
}